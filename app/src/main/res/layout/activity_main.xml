<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.diyviewdemo.MainActivity">

    <FrameLayout
        android:id="@+id/fl_boardcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20px"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_last"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_marginTop="100px"
            android:text="撤销"/>

        <Button
            android:id="@+id/btn_recover"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_marginTop="10px"
            android:text="恢复"/>

        <Button
            android:id="@+id/btn_redo"
            android:layout_width="200px"
            android:layout_height="120px"
            android:layout_marginTop="10px"
            android:text="清空"/>

    </LinearLayout>

    <SeekBar
        android:id="@+id/sb_size"
        android:layout_above="@+id/ll_bottom_boardstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="5"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#33000000"
        android:layout_above="@id/ll_bottom_boardstyle"/>
    <LinearLayout
        android:id="@+id/ll_bottom_boardstyle"
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#F0F5D1">
        <LinearLayout
            android:id="@+id/ll_paint_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_paintstyle"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="5px"
                android:text="画笔样式"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_paint_color"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_paintcolor"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="5px"
                android:text="画笔颜色"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_paint_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_paintsize"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_marginTop="5px"
                android:text="画笔尺寸"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
